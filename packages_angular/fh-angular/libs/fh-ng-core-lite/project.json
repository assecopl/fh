{
  "name": "fh-ng-core-lite",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/fh-ng-core-lite/src",
  "prefix": "lib",
  "tags": [],
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/fh-ng-core-lite/jest.config.ts",
        "passWithNoTests": true,
        "inlineStyleLanguage": "scss",
        "styles": [
          "libs/fh-ng-core-lite/src/styles.scss"
        ]
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/fh-ng-core-lite/**/*.ts",
          "libs/fh-ng-core-lite/**/*.html"
        ]
      }
    }
  }
}
